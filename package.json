        "eslint-plugin-jest": "^27.1.4",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "sass": "^1.54.8"
    },
    "dependencies": {
        "bootstrap-dark-5": "^1.1.3"
