    "test-e2e-ci": "start-server-and-test start-server http://localhost:8080 test-e2e"
  },
  "keywords": [],
  "author": "Queenen",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "cypress": "^13.5.0",
    "eslint": "^8.53.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "sass": "^1.54.8",
    "start-server-and-test": "^2.0.2"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.html": [
      "npx prettier --write"
    ],
    "*.scss": [
      "npx prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
