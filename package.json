{
  "name": "social-media-test",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "jest",
    "start-server": "http-server ./ -p 8080",
