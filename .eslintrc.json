{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files":["**/*.test.js"],
            "env":{"jest": true},
            "plugins": ["jest"],
            "extends":["plugin:jest/recommended"],
            "rules": {"jest/prefer-expext-assertions": "off"}
        },
        {
            "files": ["**/*.cy.js"],
            "env": { "cypress/globals": true },
            "plugins": ["cypress"],
            "extends": ["plugin:cypress/recommended"],
            "rules": {
              "cypress/no-unnecessary-waiting": "off",
              "no-unused-vars": 1
            }
          }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    }
}
