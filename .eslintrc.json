{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.cy.js"
            ],
            "env": {
                "jest": true,
                "cypress/globals": true,
            },
            "plugins": [
                "prettier",
                "jest",
                "cypress"
            ],
            "extends": [
                "plugin:jest/recommended",
                "plugin:cypress/recommended"
            ],
            "rules": {
                "jest/prefer-expect-assertions": "off",
                "cypress/no-unnecessary-waiting": "off",
                "no-unused-vars": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {}
}