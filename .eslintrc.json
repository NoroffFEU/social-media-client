{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "env": { "jest": true },
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"],
            "rules": { "jest/prefer-expect-assertions": "off" }
        },
        {
            "files": ["**/*.spec.js", "**/*.e2e.js"], // Add Cypress test file patterns
            "env": { "cypress/globals": true }, 
            "extends": ["plugin:cypress/recommended"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {},
    "plugins": [
        "cypress" 
    ]
}

