{
    "env": {
          "browser": true,
          "es2021": true
      },
      "extends": "eslint:recommended",
      "overrides": [
        {
          "files": ["**/*.test.js", "src/helpers/**/*.js"],
          "env": { "jest": true },
          "plugins": ["jest"],
          "extends": ["plugin:jest/recommended"],
          "rules": { "jest/prefer-expect-assertions": "off",
          "no-undef": "off",
          "no-global-assign": "off" }
        }
      ],
      "parserOptions": {
          "ecmaVersion": "latest",
          "sourceType": "module"
      },
      "rules": {
      }
  }